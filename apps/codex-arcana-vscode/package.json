{
  "name": "codex-arcana-vscode",
  "displayName": "codex-arcana-vscode",
  "description": "",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "extension.js",
  "contributes": {
    "commands": [
      {
        "command": "codex-arcana-vscode.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "spellcasting.copy",
        "title": "Copy",
        "icon": "$(copy)"
      }
    ],
    "menus": {
      "view/item/context": [
        {
          "command": "spellcasting.copy",
          "group": "inline",
          "when": "view == spellcasting-overview"
        }
      ]
    },
    "viewsContainers": {
      "activitybar": [
        {
          "id": "codex-arcana",
          "title": "Codex Arcana",
          "icon": "resources/codex-arcana.svg"
        }
      ]
    },
    "views": {
      "codex-arcana": [
        {
          "id": "spellcasting-overview",
          "name": "Spellcasting Overview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "build": "npm run check-types && npm run lint && node esbuild.js",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "check-types": "tsc --noEmit",
    "lint": "eslint src"
  }
}
